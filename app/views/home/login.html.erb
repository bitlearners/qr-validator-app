<main class="container-fluid h-100">
  <div class="row h-100">
  <div class="col-11 col-sm-11 col-md-6 col-lg-5 col-xl-3 mx-auto align-self-center py-4">
  <h2 class="mb-4 text-center"><span class="text-secondary fw-light">Login to</span><br />your account</h2>
              <%= form_with url: login_path, method: :post do |f| %>
                    <div class="form-group form-floating mb-3 is-valid">
                      <%= f.label :email, class:'form-label'%>
                      <%= f.text_field :email, type: "email", required: "true", autofocus: "true", class:"form-control", id:"login-uname-field", autocomplete:"username" %>
                    </div>
                    <div class="form-group form-floating mb-3 is-valid">
                      <%= f.label :password, class:'form-label'%>
                      <%= f.text_field :password, type: "password", required: "true", class:"form-control", id:"login-passwd-field", autocomplete: "current-password"%>
                    </div>

                  <div class="col-12 mt-auto mx-auto">
                      <div class="row ">
                        <div class="col-12 d-grid px-0">
                          <%= f.submit "Login", class:'btn btn-primary', style:"background-color: #6562df;" %>

                        </div>
                      </div>
                    </div>
              <% end %>

              <br><br>
              <p class="text-center"><%= link_to "New User? Create Account", signup_path, style:"text-decoration: none;" %></p>
            </div>
  </div>
</div>
